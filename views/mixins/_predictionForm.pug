include _predictionFields

mixin predictionForm(prediction = {})
  form.ui.form.segment.unstackable.add-prediction-form(action='/add' method='POST')
    #fields
      - for(var i = 0; i < 5; i++)
        +predictionFields()

    button.ui.right.floated.button.purple.huge(type='submit') Post
    button.ui.button.basic.purple.icon.circular.huge(id='addFields')
      |
      i.icon.add
    script.
      var today = new Date()
      $('.ui.calendar').calendar({
        minDate: new Date(today.getFullYear(), today.getMonth(), today.getDate()),
        maxDate: new Date(today.getFullYear(), today.getMonth(), today.getDate() + 14)
      });
      $('#date-picker').calendar({
        type: 'date'
      });

      $('.ui.dropdown').dropdown();
