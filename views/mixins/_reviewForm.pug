mixin reviewForm(prediction)
  form.reviewer(action=`/review/${prediction._id}` method="POST" id='rate_form')
    .reviewer__meta
      .reviewer__stars
        each num in [5,4,3,2,1]
          input(type="radio" required id=`star${num}` name="rating" value=num)
          label(for=`star${num}`) #{num} Stars
